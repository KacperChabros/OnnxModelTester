<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnnxModelTester.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Picker x:Name="ModelPicker"
                    Title="Choose the model"
                    SelectedIndexChanged="OnModelPickerSelectionChanged" />

            <Picker x:Name="ColorMapPicker"
                Title="Choose dataset variant (number of classes)"
                SelectedIndexChanged="OnColorMapPickerSelectionChanged" />
            
            <Button Text="Open the camera"
                Clicked="OnCameraButtonClicked"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
